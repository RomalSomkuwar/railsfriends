
<% if user_signed_in? %>

<table class = "table table table-striped table table-bordered table table-hover">
<thead class="table-dark">
    <tr>
      <th>Name</th>
      <th>Email</th>
      <th>Phone</th>
      <th>Twitter</th>
      <th></th>
    </tr>
  </thead>

<tbody>
  <% @friends.each do |friend| %>
  <tr>
    <td><%= link_to friend.first_name + ' ' + friend.last_name , friend %>
    </td>
    <td><%= friend.email %></td>
    <td><%= friend.phone %></td>
    <td><%= friend.twitter %></td>
    <% if friend.user == current_user %>
    <!-- <td><%#= link_to 'Destroy', friend_path(friend), method: :delete, data: {confirm: 'Are you sure?'} %></td> -->
    <td><%= link_to 'Delete', friend,  data: {turbo_method: :delete, turbo_confirm: 'Are you sure?' }, class: "btn btn-outline-danger btn-sm" %></td>
    <% else %>
    <td></td>
    <!-- <td></td> -->
    <% end %>
  </tr>
  <% end %>
</tbody>
</table>
<br>

<%= link_to 'New friend', new_friend_path, class:"btn btn-primary" %>
<% else %>

<h1>Hello World!</h1>
  This is my first Rails Webpage..

<% end %>


